         <font>
            <Font name="Sitka Text" size="18.0" />
         </font>
      </Label>
      <Label fx:id="phoneLabel" alignment="CENTER" layoutX="100.0" layoutY="216.0" text="Phone" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Sitka Text" size="18.0" />
         </font>
      </Label>
      <Label fx:id="editLabel1" alignment="CENTER" layoutX="469.0" layoutY="81.0" onMouseClicked="#clickOnEdit1" text="Edit" textAlignment="CENTER" textFill="WHITE">
